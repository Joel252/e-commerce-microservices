@model IEnumerable<ProductDto>

<form method="post">
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-dark text-center py-2">@product.Name</h3>
                        <img src="@product.ImageUrl" alt="" width="200px" class="card-img-top"
                             style="object-fit: cover;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size: 20px;">@product.Price.ToString("c")</span>
                                <span class="badge bg-warning text-white p-2">@product.Category</span>
                            </div>
                            <p class="card-text">@product.Description</p>
                            <div class="row">
                                <div class="col">
                                    <button asp-action="Details" asp-route-productId="@product.ProductId"
                                            class="btn btn-primary form-control">Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>