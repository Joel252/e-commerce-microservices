@model RegisterRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control"/>
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" placeholder="user@example.com" class="form-control"/>
                <div asp-validation-for="Email" class="text-danger"></div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control"/>
                <div asp-validation-for="PhoneNumber" class="text-danger"></div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control"/>
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pt-2 pb-5">
                <select asp-for="Role" class="form-select text-center" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--- Select Role ---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-primary" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}