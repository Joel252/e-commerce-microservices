@model IEnumerable<ProductDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Products List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="ProductCreate" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create New
                    Product</a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Category</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@((product.Description))</td>
                    <td>@((product.Price).ToString("c"))</td>
                    <td>@((product.Stock).ToString())</td>
                    <td><img src="@((product.ImageUrl))" alt="" width="200" height="200"></td>
                    <td>@((product.Category))</td>
                    <td>
                        <a asp-action="ProductDelete" asp-route-productId="@product.ProductId" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>